<!doctype html>
<html lang="fa">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= field.title %></title>
  <style>
    :root {
      --bg: #f6f2ea;
      --ink: #1d1b16;
      --muted: #6b6358;
      --card: #fff8ee;
      --accent: #ff8f2f;
      --accent-2: #2f6cff;
      --shadow: rgba(20, 18, 14, 0.12);
      --line: rgba(29, 27, 22, 0.08);
    }

    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: "Plus Jakarta Sans", "Segoe UI", system-ui, sans-serif;
      color: var(--ink);
      background:
        radial-gradient(1200px 600px at 80% -10%, #ffe0c2 0%, transparent 60%),
        radial-gradient(900px 500px at 10% 10%, #d7e4ff 0%, transparent 55%),
        var(--bg);
      min-height: 100vh;
      padding: 32px 20px;
    }

    .wrap {
      width: min(980px, 100%);
      margin: 0 auto;
      background: var(--card);
      border-radius: 24px;
      padding: 40px 36px;
      box-shadow: 0 20px 60px var(--shadow);
      border: 1px solid var(--line);
    }

    header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      margin-bottom: 24px;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      font-weight: 700;
      letter-spacing: 0.2px;
    }

    .brand-badge {
      width: 40px;
      height: 40px;
      border-radius: 12px;
      background: linear-gradient(135deg, var(--accent), #ffb457);
      display: grid;
      place-items: center;
      color: #fff;
      font-weight: 700;
    }

    h1 {
      font-size: clamp(26px, 3.6vw, 36px);
      margin: 0 0 10px;
    }

    p {
      margin: 0;
      color: var(--muted);
      line-height: 1.7;
      font-size: 16px;
    }

    .intro {
      background: #fff;
      border-radius: 16px;
      padding: 20px;
      border: 1px solid var(--line);
      display: grid;
      gap: 10px;
      margin: 16px 0 28px;
    }

    .cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 16px;
    }

    .card {
      transition: background-color 0.4s ease-in-out;
      background: #fff;
      border-radius: 16px;
      padding: 18px;
      border: 1px solid var(--line);
      box-shadow: 0 10px 20px rgba(20, 18, 14, 0.06);
      display: grid;
      gap: 8px;
    }
        
    .card:hover{
      background-color: rgb(248, 248, 248);
    }

    .card h2 {
      margin: 0;
      font-size: 18px;
    }

    .tag {
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--muted);
      font-weight: 700;
    }
  </style>
</head>
<body>
  <main class="wrap">
    <header>
      <div class="brand">
        <div class="brand-badge">BG</div>
        <div>BranchGuide</div>
      </div>
      <div onclick="window.location.href = '/majors?place=' + encodeURIComponent('<%= field.top_subfield %>');">go top subfield</div>
    </header>

    <h1><%= field.title %></h1>
    <section class="intro">
      <span class="tag">Introduction</span>
      <p><%= field.introduction %></p>
    </section>

    <section class="cards">
      <% for(let i=0;i<field.subfields.length;i++){ %>
        <article class="card" onclick="window.location.href = '/majors?place=' + encodeURIComponent('<%= field.subfields[i].title %>');">
          <span class="tag">Subfield</span>
          <h2><%= field.subfields[i].title %></h2>
          <p><%= field.subfields[i].shortIntroduction %></p>
        </article>
      <% } %>
      <!-- <article class="card">
        <span class="tag">Subfield</span>
        <h2>Subfield Two</h2>
        <p>Short description for this subfield.</p>
      </article>
      <article class="card">
        <span class="tag">Subfield</span>
        <h2>Subfield Three</h2>
        <p>Short description for this subfield.</p>
      </article> -->
    </section>
  </main>
</body>
</html>
